<script src="/content/js/customloading.js"></script>
<script type="application/javascript">
    var presenter = $(".photo-presentation");

    var presenterContainer = $(".photo-presentation-container")

    $(presenterContainer).on('click', function(){
        if (presenter.hasClass("selected-photo")) {
            presenter.removeClass("selected-photo");
            presenter.parent().removeClass("selected-photo-container");

        }
    })

    $(presenter).on("click", function () {
        if (presenter.hasClass("selected-photo")) {
            presenter.removeClass("selected-photo");
            presenter.parent().removeClass("selected-photo-container");

        }

    });

    $(".photo-click").on("click", function () {
        if (!presenter.hasClass("selected-photo")) {
            presenter.attr("src", "");

            presenter.addClass("selected-photo");
            presenter.removeClass("landscape");
            presenter.removeClass("portrait");
            presenter.parent().addClass("selected-photo-container");
            presenter.attr("src", $(this).attr("data-original"));
            if($(this).height() /$(this).width() > 1.0){
                presenter.addClass("portrait");
            }else{
                presenter.addClass("landscape");

            }
        }
    });

    $(".gallery-button").on("click", function () {
        // var lazy = lazyLoad();
        // lazyload().loadImages();
        var presentor = $(".presentor");
        if (presentor.css("left") === "0px") {
            presentor.css("left", "100%");
        } else {
            presentor.css("left", "0%");
        }
    });



</script>
